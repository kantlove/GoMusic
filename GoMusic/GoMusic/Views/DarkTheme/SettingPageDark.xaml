                <DiscreteObjectKeyFrame KeyTime="0:0:1.4" Value="0"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:1.5" Value="0"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

